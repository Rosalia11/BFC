                             alt="Pastas" class="category-image" />
                        <div class="category-content">
                            <h2 class="category-title">Pastas</h2>
                        </div>
                    </div>
                </NavLink>
            </div>

            <!-- ──────── FILA 2 ──────── -->
            <div class="categories-row row-two">
                <!-- Postres -->
                <NavLink href="/recetas/Postres" class="no-style-link">
